<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div><%= f.label :name %>
  <%= f.text_field :name %><br /><br /></div>

  <div><%= f.label :email %>
  <%= f.email_field :email %><br /><br /></div>

  <div><%= f.label :title %>
  <%= f.text_field :title %><br /><br /></div>

	<div><%= f.label :dept %>
  <%= f.text_field :dept %><br /><br /></div>

	<div><%= f.label :projects %>
  <%= f.text_field :projects %><br /><br /></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %><br /><br /></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br /><br /></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
