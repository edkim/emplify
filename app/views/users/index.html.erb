<%= provide(:title, 'All users') %>
<h1>Employee Directory</h1>

<%= form_tag users_path, method: 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", name: nil %>
	</p>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %><br />
      Title: <%= user.title %><br />
      Dept: <%= user.dept %>
    </li>
  <% end %>
</ul>